{% extends 'base.html.twig' %}

{% block title %}LA carte du restaurant Quai Antique
{% endblock %}

{% block body %}
	<div class="container">
		<h1>La carte</h1>
		{% for category in categorys %}
			<h2>{{category.title}}</h2>
			{% for meal in category.meals %}
				<p>{{meal.description}}
					{{meal.price}}
					€</p>
			{% endfor %}
		{% endfor %}

		<h1>Menu</h1>
		{% for menu in menus %}
			<h2>{{ menu.name }}</h2>
			{% for formule in menu.formules %}
				<h3>{{ formule.title }}
				</h3>
				<p>{{ formule.annotation }}</p>
				<p>{{ formule.description }}
					{{ formule.price }}
					€</p><br>
			{% endfor %}
		{% endfor %}
	</div>

{% endblock %}
