{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}
{% block meta %}
	<meta name="description" content="Page de connexion">
{% endblock %}
{% block body %}
	<div class="container connexion">

		<form method="post" name="connexion">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<div class="connect">
				{% if app.user %}
					<div class="mb-3">
						Vous etes connect√© comme
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Deconnexion</a>
					</div>
				{% endif %}
			</div>


			<h1>Connexion</h1>
			<div class="form-group">
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			</div>
			<div class="form-group">
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			</div>

			<div class="form-checkbox">
				<label>Se souvenir de moi</label>
				<input type="checkbox" name="_remember_me" id="inputCheckbox">

			</div>

			<div class="btn">
				<button type="submit" id="inputSubmit">
					Me connecter
				</button>
			</div>

			<div class="connect">
				<a href="{{path('app_register')}}">M'inscrire</a>
			</div>


		</form>

	</div>
{% endblock %}
