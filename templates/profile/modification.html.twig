{% extends 'base.html.twig' %}

{% block title %}modification de profil
{% endblock %}

{% block body %}
	<div class="container">
		{% for message in app.flashes('erreur') %}
			<div class="erreur">
				<p>{{message}}</p>
			</div>
		{% endfor %}
		<h1>Votre profil</h1>
		<div class="profile">
			<form method="post">
				<div class="form-group">
					<label for="pass">nouveau mot de passe</label>
					<input type="password" id="pass" name="pass">
				</div>
				<div class="form-group">
					<label for="pass2">confirmer mot de passe</label>
					<input type="password" id="pass2" name="pass2">
				</div>
				<div class="btn">
					<button>
						Modifier le mot de passe
					</button>
				</div>
			</form>
			{{form_start(editProfile)}}
			<div class="form-group">
				{{ form_label(editProfile.guests) }}
				{{ form_widget(editProfile.guests) }}
			</div>
			<div class="form-group">
				{{ form_label(editProfile.allergies) }}
				{{ form_widget(editProfile.allergies) }}
			</div>
			<div class="btn">
				<button type="submit" class="btn">Modifier</button>
			</div>
			{{form_end(editProfile)}}
		</div>
	{% endblock %}
