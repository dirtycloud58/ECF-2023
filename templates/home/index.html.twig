{% extends 'base.html.twig' %}

{% block title %}Bienvenue au Quai Antique
{% endblock %}
{% block meta %}
	<meta name="description" content="Bienvenue sur la page d'acueil du restaurant Quai antique">
{% endblock %}
{% block body %}

	<div class="container">

		<div class="image-home">
			<h1>Quai Antique</h1>
		</div>
		<div class="accueil">
			<h1>Bienvenue</h1>
			<p>Le restaurant Au quai Antique est situé sur les rives de la Bretagne.
				<br>
				Le Chef vous propose une cuisine de saison et quelques savoureuses spécialités iodées, plateaux de fruits de mer,poissons des côtes et des rivières, coquillages… Le tout préparé maison.
			</p>
			<p>Nous vous présentons nos trois plats du moment.</p>
		</div>
		<div class="container-galery">
			{% for galery in galerys %}
				<div class="galeries">
					<h3>{{galery.name}}</h3>
					<img src="{{ vich_uploader_asset(galery,'imageFile') }}" alt="{{ galery.name }}" class="galeries-img">
				</div>
			{% endfor %}
		</div>


		<div class="btn">
			<button>
				<a href="{{path('app_reservation')}}">Réservation</a>
			</button>
		</div>
		<div>
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('navigation') }}
			<script>
				{% for flashMessage in app.session.flashBag.get('success') %}
swal({
icon: 'success',
title: 'Succès',
text: '{{ flashMessage }}',
button: true,
timer: 3000
});{% endfor %}
			</script>

		{% endblock %}
